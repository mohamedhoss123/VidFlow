# VidFlow Environment Configuration
# Non-sensitive environment variables

# Project Information
COMPOSE_PROJECT_NAME=vidflow
COMPOSE_FILE=docker-compose.yaml

# Network Configuration
VIDFLOW_NETWORK_SUBNET=172.20.0.0/16

# PostgreSQL Configuration
POSTGRES_DB=vidflow
POSTGRES_USER=vidflow_user
POSTGRES_MAX_CONNECTIONS=100

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=vidflow_admin
RABBITMQ_DEFAULT_VHOST=vidflow
RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.6

# Resource Limits
POSTGRES_MEMORY_LIMIT=1G
POSTGRES_CPU_LIMIT=1.0
RABBITMQ_MEMORY_LIMIT=1G
RABBITMQ_CPU_LIMIT=1.0

# Logging Configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s
